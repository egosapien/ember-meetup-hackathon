<main>
  <div class="container">
    <div class="row">
      <div class="col s12">
        <h2 id="title" class="truncate white-text">Ember/JS Coding Nights Hackathon</h2>
      </div>
    </div>
    <nav>
      <div class="nav-wrapper hoverable blue darken-4">
        <div class="col s12">
          {{#bread-crumbs linkable=true as |component route|}}
              {{#if (eq route.path 'orgs.org')}}
                {{link-to route.title 'orgs.org.repos' class='breadcrumb'}}
              {{else if (eq route.path 'orgs.org.repo.pull')}}
                {{link-to route.title 'orgs.org.repo.pulls' class='breadcrumb'}}
              {{else}}
                {{link-to route.title route.path class='breadcrumb'}}
              {{/if}}
          {{/bread-crumbs}}
        </div>
      </div>
    </nav>
    <div class="row">
      <div class="col s12">
        {{outlet}}
      </div>
    </div>
  </div>

  {{!-- ember-cli-materialize modal container --}}
  {{md-modal-container}}
</main>
